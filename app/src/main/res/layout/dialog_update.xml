<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="xyz.jdynb.tv.model.UpdateModel" />

    </data>

    <LinearLayout
        android:padding="30dp"
        android:background="#50000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="23sp"
            tools:text="发现新版本(10.00)"
            android:textColor="@color/white"
            android:text="@{`发现新版本` + m.versionCode}"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:indeterminate="@{m.progress == 0}"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:layout_marginTop="10dp"
            android:progress="@{m.progress}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{m.closeTime + `后自动关闭`}"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/white"
            tools:text="10秒后自动关闭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:focusable="false"
                android:id="@+id/btn_update"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:text="立即更新(按确认键)"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:focusable="false"
                android:id="@+id/btn_cancel"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:text="取消(按返回键)"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</layout>